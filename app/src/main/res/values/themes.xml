<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CashMangement" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkBlue2</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.CashMangement" parent="Base.Theme.CashMangement" />

    <style name="Theme.AppCompat.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/darkBlue </item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_splash </item>
        <item name="postSplashScreenTheme">@style/Base.Theme.CashMangement </item>

    </style>
</resources>